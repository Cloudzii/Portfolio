#gnb-nav{
 position: fixed;
 z-index:2;
 width:180px;
 height:100%;
 left:0;
 background-color:#000;
 transition: .5s;
 header{
   padding:35px 0 0 30px;
   a{
     span{
       display: inline-block;
       width: 23px;
       height:23px;
       background-image: url('../image/main/gnb/gnb-menu.png');
       background-repeat: no-repeat;
       background-size: cover;
       vertical-align: middle;
       transition:.5s;
     }
     cite{
       display: inline-block;
       font-size: 12px;
       color: #888;
       font-weight: bold;
     }
   }
 }
 &.on{
   left:180px;
   header{
    a{
      span{
        background-position:-24px 0;
      }
    }
   }
 }
 >div{
   display:block;
   width:180px;
   height: 100%;
   left:180px;
   background-color: #000;
   ul{
     padding:40px 0 0 15px;
     li{
       padding-top:6px;
       height:auto;
       cite{
         display: block;
         color: #fff;
         font-family: @main-font;
         font-weight: bold;
         margin-bottom:8px;
         i{
          //  .ibox()();
         }
       }
       a{
         width: 140px;
         display: block;
         padding-left: 15px;
         line-height:24px;
         font-weight:bold;
         color:#ccc;
         letter-spacing:-1px;
         .ihover();
         font-size:13px;
       }
     }
   }
   dl{
     padding-left:30px;
     top:380px;
     position:relative;
     dt{
       font-weight: bold;
       color: #ed1c24;
       font-size: 12px;
       line-height:25px;
       position: relative;top:30px;
     }
     dd{
       border-top:1px solid #666;
       color:#777;
       font-size:11px;
       line-height:14.3px;
       padding:20px 0 ;
       i{
         display: block;
         height: 15px;
       }
     }
   }
 }
 #main-nav{
   left:-180px;
   transition: .5s;
   &.on{
     left:0;
   }
 }
}
